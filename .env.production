# ================================
# APK BILLING SYSTEM - PRODUCTION
# ================================

# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=apkbilling
DB_USER=apkbilling_user
DB_PASSWORD=SuperStrongPassword123!@#
DB_MAX_CONNECTIONS=50
DB_CONNECTION_TIMEOUT=5000

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=RedisPassword123!
REDIS_DB=0
REDIS_KEY_PREFIX=apkbilling:

# ================================
# SERVER CONFIGURATION
# ================================
PORT=3000
NODE_ENV=production
API_VERSION=v1
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
REQUEST_TIMEOUT=30000

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET=production-super-secret-jwt-key-32-chars-min-abcdef123456789
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=14
SESSION_TIMEOUT=3600

# Admin default credentials (CHANGE IMMEDIATELY AFTER DEPLOYMENT)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=ChangeMe123!@#
DEFAULT_ADMIN_NAME=System Administrator

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_PATH=/var/lib/apkbilling/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_URL_PREFIX=/uploads

# ================================
# BUSINESS CONFIGURATION
# ================================
# Cafe/Warnet Information
BUSINESS_NAME=Warnet & Cafe Anda
BUSINESS_ADDRESS=Jl. Utama No. 456, Jakarta
BUSINESS_PHONE=021-87654321
BUSINESS_EMAIL=info@warnetanda.com
BUSINESS_WEBSITE=https://warnetanda.com

# Currency & Pricing
CURRENCY=IDR
CURRENCY_SYMBOL=Rp
TAX_RATE=0.11
SERVICE_CHARGE=0.05
DECIMAL_PLACES=0

# Working Hours
WORKING_HOURS_START=06:00
WORKING_HOURS_END=24:00
TIMEZONE=Asia/Jakarta

# ================================
# TV BILLING CONFIGURATION
# ================================
# Maximum concurrent TV sessions
MAX_TV_SESSIONS=200

# Session warning time (minutes before session ends)
SESSION_WARNING_MINUTES=5

# Auto power off when session ends
AUTO_POWER_OFF=true

# Minimum billing time (minutes)
MIN_BILLING_TIME=15

# Grace period after session ends (seconds)
GRACE_PERIOD_SECONDS=60

# TV monitoring interval (seconds)
TV_MONITOR_INTERVAL=5

# ================================
# POS SYSTEM CONFIGURATION
# ================================
# Order number prefix
ORDER_PREFIX=WA
ORDER_NUMBER_LENGTH=8

# Receipt settings
RECEIPT_FOOTER=Terima kasih telah berkunjung! Sampai jumpa lagi.
PRINT_LOGO=true
PRINT_QR_CODE=true

# Stock management
LOW_STOCK_THRESHOLD=5
AUTO_REORDER=true

# ================================
# NETWORK CONFIGURATION
# ================================
# WiFi Information for customers
WIFI_NAME=WarnetAnda_Free
WIFI_PASSWORD=warnet2024
WIFI_GUEST_NAME=WarnetAnda_Guest
WIFI_GUEST_PASSWORD=guest2024

# TV Network settings
TV_NETWORK_RANGE=192.168.100.0/24
TV_DISCOVERY_PORT=8888
TV_COMMAND_PORT=8889

# ================================
# NOTIFICATION CONFIGURATION
# ================================
# Email settings (for reports and alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=system@warnetanda.com
SMTP_PASS=your-gmail-app-password
SMTP_FROM_NAME=Warnet Anda System
SMTP_FROM_EMAIL=noreply@warnetanda.com

# SMS settings (optional)
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=+6281234567890

# Push notification settings
FCM_SERVER_KEY=your-fcm-server-key
FCM_SENDER_ID=your-fcm-sender-id

# ================================
# BACKUP CONFIGURATION
# ================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_PATH=/var/lib/apkbilling/backups
BACKUP_ENCRYPTION_KEY=backup-encryption-key-32-chars-min

# Cloud backup (AWS S3 example)
CLOUD_BACKUP_PROVIDER=s3
CLOUD_BACKUP_KEY=your-aws-access-key
CLOUD_BACKUP_SECRET=your-aws-secret-key
CLOUD_BACKUP_BUCKET=apkbilling-backups

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=warn
LOG_FILE_PATH=/var/lib/apkbilling/logs
LOG_MAX_SIZE=100m
LOG_MAX_FILES=30
LOG_DATE_PATTERN=YYYY-MM-DD

# Enable specific logs
LOG_DATABASE_QUERIES=false
LOG_API_REQUESTS=true
LOG_TV_EVENTS=true
LOG_TRANSACTIONS=true

# ================================
# MONITORING & ANALYTICS
# ================================
# System monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
ENABLE_USAGE_ANALYTICS=true

# Performance monitoring (New Relic example)
ENABLE_APM=true
APM_SERVICE_NAME=apkbilling-prod
APM_SERVER_URL=https://rpm.newrelic.com

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
# Development only settings (DISABLED in production)
DEV_ENABLE_SEED_DATA=false
DEV_ENABLE_FAKE_PAYMENTS=false
DEV_MOCK_TV_RESPONSES=false
DEV_SKIP_AUTH=false

# API Documentation (disabled in production for security)
ENABLE_API_DOCS=false
API_DOCS_PATH=/api-docs

# Debug settings (disabled in production)
DEBUG_MODE=false
VERBOSE_LOGGING=false