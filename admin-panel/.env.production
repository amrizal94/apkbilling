# ================================
# ADMIN PANEL - PRODUCTION
# ================================

# ================================
# API CONFIGURATION
# ================================
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_SOCKET_URL=https://yourdomain.com
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=3

# ================================
# APPLICATION CONFIGURATION
# ================================
REACT_APP_NAME=APK Billing Admin
REACT_APP_VERSION=1.0.0
REACT_APP_ENV=production
REACT_APP_URL=https://admin.yourdomain.com

# ================================
# BUSINESS BRANDING
# ================================
REACT_APP_BUSINESS_NAME=Warnet & Cafe Anda
REACT_APP_LOGO_URL=/logo.png
REACT_APP_FAVICON_URL=/favicon.ico
REACT_APP_PRIMARY_COLOR=#1976d2
REACT_APP_SECONDARY_COLOR=#dc004e

# ================================
# FEATURE FLAGS
# ================================
REACT_APP_ENABLE_TV_MANAGEMENT=true
REACT_APP_ENABLE_POS_SYSTEM=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_SETTINGS=true
REACT_APP_ENABLE_USER_MANAGEMENT=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REALTIME=true
REACT_APP_ENABLE_PRINTING=true

# ================================
# UI CONFIGURATION
# ================================
REACT_APP_DEFAULT_PAGE_SIZE=25
REACT_APP_PAGE_SIZES=25,50,100,200
REACT_APP_CURRENCY_SYMBOL=Rp
REACT_APP_CURRENCY_LOCALE=id-ID
REACT_APP_DATE_FORMAT=DD/MM/YYYY
REACT_APP_TIME_FORMAT=HH:mm:ss
REACT_APP_DATETIME_FORMAT=DD/MM/YYYY HH:mm
REACT_APP_NUMBER_DECIMAL_PLACES=0

# ================================
# REAL-TIME UPDATES
# ================================
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10
REACT_APP_DASHBOARD_REFRESH_INTERVAL=5000
REACT_APP_TV_STATUS_REFRESH_INTERVAL=3000
REACT_APP_ORDERS_REFRESH_INTERVAL=10000

# ================================
# NOTIFICATION SETTINGS
# ================================
REACT_APP_TOAST_DURATION=5000
REACT_APP_ENABLE_SOUND_NOTIFICATIONS=true
REACT_APP_SUCCESS_SOUND=success.mp3
REACT_APP_ERROR_SOUND=error.mp3
REACT_APP_WARNING_SOUND=warning.mp3

# ================================
# DEVELOPMENT SETTINGS (DISABLED)
# ================================
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_CONSOLE_LOGS=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_USE_MOCK_DATA=false

# ================================
# SECURITY SETTINGS (STRICT)
# ================================
REACT_APP_SESSION_TIMEOUT=60
REACT_APP_LOGOUT_WARNING_MINUTES=5
REACT_APP_MIN_PASSWORD_LENGTH=8
REACT_APP_REQUIRE_UPPERCASE=true
REACT_APP_REQUIRE_LOWERCASE=true
REACT_APP_REQUIRE_NUMBERS=true
REACT_APP_REQUIRE_SPECIAL_CHARS=true

# ================================
# ANALYTICS & MONITORING
# ================================
REACT_APP_GA_TRACKING_ID=GA-XXXXXXXXX-X
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_ENABLE_ACTIVITY_TRACKING=true

# ================================
# PRINTING CONFIGURATION
# ================================
REACT_APP_DEFAULT_PRINTER_NAME=
REACT_APP_RECEIPT_TEMPLATE=default
REACT_APP_PRINT_PAGE_SIZE=A4
REACT_APP_PRINT_ORIENTATION=portrait

# ================================
# MAP INTEGRATION
# ================================
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_DEFAULT_MAP_CENTER=-6.2088,106.8456
REACT_APP_DEFAULT_MAP_ZOOM=12

# ================================
# EXTERNAL INTEGRATIONS
# ================================
REACT_APP_PAYMENT_GATEWAY_URL=https://payment.yourdomain.com
REACT_APP_SMS_GATEWAY_URL=https://sms.yourdomain.com
REACT_APP_EMAIL_SERVICE_URL=https://email.yourdomain.com

# ================================
# CACHE SETTINGS
# ================================
REACT_APP_CACHE_DURATION=300000
REACT_APP_ENABLE_LOCAL_STORAGE_CACHE=true
REACT_APP_MAX_CACHE_SIZE=50

# ================================
# ACCESSIBILITY SETTINGS
# ================================
REACT_APP_ENABLE_HIGH_CONTRAST=true
REACT_APP_ENABLE_FONT_SIZE_ADJUSTMENT=true
REACT_APP_ENABLE_KEYBOARD_NAVIGATION=true
REACT_APP_DEFAULT_LANGUAGE=id
REACT_APP_AVAILABLE_LANGUAGES=id,en

# Build optimization
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false