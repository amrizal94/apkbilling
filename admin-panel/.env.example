# ================================
# ADMIN PANEL CONFIGURATION
# ================================

# ================================
# API CONFIGURATION
# ================================
# Backend API URL
REACT_APP_API_URL=http://localhost:3000/api

# WebSocket URL for real-time updates
REACT_APP_SOCKET_URL=http://localhost:3000

# API timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# API retry attempts
REACT_APP_API_RETRY_ATTEMPTS=3

# ================================
# APPLICATION CONFIGURATION
# ================================
# Application name
REACT_APP_NAME=APK Billing Admin

# Application version
REACT_APP_VERSION=1.0.0

# Application environment
REACT_APP_ENV=development

# Application URL
REACT_APP_URL=http://localhost:3001

# ================================
# BUSINESS BRANDING
# ================================
# Business name (displayed in header)
REACT_APP_BUSINESS_NAME=Warnet & Cafe ABC

# Logo URL (can be external URL or local path)
REACT_APP_LOGO_URL=/logo.png

# Favicon URL
REACT_APP_FAVICON_URL=/favicon.ico

# Primary brand color
REACT_APP_PRIMARY_COLOR=#1976d2

# Secondary brand color
REACT_APP_SECONDARY_COLOR=#dc004e

# ================================
# FEATURE FLAGS
# ================================
# Enable/disable specific features
REACT_APP_ENABLE_TV_MANAGEMENT=true
REACT_APP_ENABLE_POS_SYSTEM=true
REACT_APP_ENABLE_REPORTS=true
REACT_APP_ENABLE_SETTINGS=true
REACT_APP_ENABLE_USER_MANAGEMENT=true

# Enable dark mode toggle
REACT_APP_ENABLE_DARK_MODE=true

# Enable notifications
REACT_APP_ENABLE_NOTIFICATIONS=true

# Enable real-time updates
REACT_APP_ENABLE_REALTIME=true

# Enable print functionality
REACT_APP_ENABLE_PRINTING=true

# ================================
# UI CONFIGURATION
# ================================
# Default items per page for tables
REACT_APP_DEFAULT_PAGE_SIZE=25

# Available page sizes
REACT_APP_PAGE_SIZES=10,25,50,100

# Default currency format
REACT_APP_CURRENCY_SYMBOL=Rp
REACT_APP_CURRENCY_LOCALE=id-ID

# Date format
REACT_APP_DATE_FORMAT=DD/MM/YYYY
REACT_APP_TIME_FORMAT=HH:mm:ss
REACT_APP_DATETIME_FORMAT=DD/MM/YYYY HH:mm

# Number format
REACT_APP_NUMBER_DECIMAL_PLACES=0

# ================================
# REAL-TIME UPDATES
# ================================
# WebSocket reconnection settings
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10

# Auto-refresh intervals (milliseconds)
REACT_APP_DASHBOARD_REFRESH_INTERVAL=5000
REACT_APP_TV_STATUS_REFRESH_INTERVAL=3000
REACT_APP_ORDERS_REFRESH_INTERVAL=10000

# ================================
# NOTIFICATION SETTINGS
# ================================
# Toast notification duration (milliseconds)
REACT_APP_TOAST_DURATION=5000

# Enable sound notifications
REACT_APP_ENABLE_SOUND_NOTIFICATIONS=true

# Sound files (in public/sounds/)
REACT_APP_SUCCESS_SOUND=success.mp3
REACT_APP_ERROR_SOUND=error.mp3
REACT_APP_WARNING_SOUND=warning.mp3

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Enable development tools
REACT_APP_ENABLE_DEV_TOOLS=true

# Enable console logging
REACT_APP_ENABLE_CONSOLE_LOGS=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# Mock data for development
REACT_APP_USE_MOCK_DATA=false

# ================================
# SECURITY SETTINGS
# ================================
# Session timeout (minutes)
REACT_APP_SESSION_TIMEOUT=60

# Auto-logout warning (minutes before timeout)
REACT_APP_LOGOUT_WARNING_MINUTES=5

# Password strength requirements
REACT_APP_MIN_PASSWORD_LENGTH=8
REACT_APP_REQUIRE_UPPERCASE=true
REACT_APP_REQUIRE_LOWERCASE=true
REACT_APP_REQUIRE_NUMBERS=true
REACT_APP_REQUIRE_SPECIAL_CHARS=true

# ================================
# ANALYTICS & MONITORING
# ================================
# Google Analytics tracking ID
REACT_APP_GA_TRACKING_ID=

# Enable error reporting
REACT_APP_ENABLE_ERROR_REPORTING=false

# Sentry DSN (for error tracking)
REACT_APP_SENTRY_DSN=

# Enable user activity tracking
REACT_APP_ENABLE_ACTIVITY_TRACKING=false

# ================================
# PRINTING CONFIGURATION
# ================================
# Default printer settings
REACT_APP_DEFAULT_PRINTER_NAME=

# Receipt template
REACT_APP_RECEIPT_TEMPLATE=default

# Print page size
REACT_APP_PRINT_PAGE_SIZE=A4

# Print orientation
REACT_APP_PRINT_ORIENTATION=portrait

# ================================
# MAP INTEGRATION
# ================================
# Google Maps API key (for location features)
REACT_APP_GOOGLE_MAPS_API_KEY=

# Default map center (latitude, longitude)
REACT_APP_DEFAULT_MAP_CENTER=-6.2088,106.8456

# Default map zoom level
REACT_APP_DEFAULT_MAP_ZOOM=12

# ================================
# EXTERNAL INTEGRATIONS
# ================================
# Payment gateway URLs
REACT_APP_PAYMENT_GATEWAY_URL=

# SMS gateway URL
REACT_APP_SMS_GATEWAY_URL=

# Email service URL
REACT_APP_EMAIL_SERVICE_URL=

# ================================
# CACHE SETTINGS
# ================================
# Cache duration for static data (milliseconds)
REACT_APP_CACHE_DURATION=300000

# Enable local storage caching
REACT_APP_ENABLE_LOCAL_STORAGE_CACHE=true

# Maximum cache size (MB)
REACT_APP_MAX_CACHE_SIZE=50

# ================================
# ACCESSIBILITY SETTINGS
# ================================
# Enable high contrast mode option
REACT_APP_ENABLE_HIGH_CONTRAST=true

# Enable font size adjustment
REACT_APP_ENABLE_FONT_SIZE_ADJUSTMENT=true

# Enable keyboard navigation
REACT_APP_ENABLE_KEYBOARD_NAVIGATION=true

# Default language
REACT_APP_DEFAULT_LANGUAGE=id

# Available languages
REACT_APP_AVAILABLE_LANGUAGES=id,en