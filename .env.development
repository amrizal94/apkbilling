# ================================
# APK BILLING SYSTEM - DEVELOPMENT
# ================================

# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=apkbilling_dev
DB_USER=postgresql
DB_PASSWORD=local
DB_MAX_CONNECTIONS=10
DB_CONNECTION_TIMEOUT=2000

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_KEY_PREFIX=apkbilling_dev:

# ================================
# SERVER CONFIGURATION
# ================================
PORT=3000
NODE_ENV=development
API_VERSION=v1
CORS_ORIGIN=*
REQUEST_TIMEOUT=30000

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=7200

# Admin default credentials
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=Dev Administrator

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,csv
UPLOAD_URL_PREFIX=/uploads

# ================================
# BUSINESS CONFIGURATION
# ================================
# Cafe/Warnet Information
BUSINESS_NAME=Warnet & Cafe Development
BUSINESS_ADDRESS=Jl. Development No. 123, Jakarta
BUSINESS_PHONE=021-12345678
BUSINESS_EMAIL=dev@apkbilling.local
BUSINESS_WEBSITE=http://localhost:3001

# Currency & Pricing
CURRENCY=IDR
CURRENCY_SYMBOL=Rp
TAX_RATE=0.10
SERVICE_CHARGE=0.05
DECIMAL_PLACES=0

# Working Hours
WORKING_HOURS_START=00:00
WORKING_HOURS_END=23:59
TIMEZONE=Asia/Jakarta

# ================================
# TV BILLING CONFIGURATION
# ================================
# Maximum concurrent TV sessions
MAX_TV_SESSIONS=20

# Session warning time (minutes before session ends)
SESSION_WARNING_MINUTES=2

# Auto power off when session ends
AUTO_POWER_OFF=false

# Minimum billing time (minutes)
MIN_BILLING_TIME=5

# Grace period after session ends (seconds)
GRACE_PERIOD_SECONDS=10

# TV monitoring interval (seconds)
TV_MONITOR_INTERVAL=5

# ================================
# POS SYSTEM CONFIGURATION
# ================================
# Order number prefix
ORDER_PREFIX=DEV
ORDER_NUMBER_LENGTH=6

# Receipt settings
RECEIPT_FOOTER=Development Mode - Not for production use
PRINT_LOGO=true
PRINT_QR_CODE=false

# Stock management
LOW_STOCK_THRESHOLD=2
AUTO_REORDER=false

# ================================
# NETWORK CONFIGURATION
# ================================
# WiFi Information for customers
WIFI_NAME=DevWarnet_WiFi
WIFI_PASSWORD=dev123456
WIFI_GUEST_NAME=DevWarnet_Guest
WIFI_GUEST_PASSWORD=guest123

# TV Network settings
TV_NETWORK_RANGE=192.168.1.0/24
TV_DISCOVERY_PORT=8888
TV_COMMAND_PORT=8889

# ================================
# NOTIFICATION CONFIGURATION
# ================================
# Email settings (disabled in development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev@apkbilling.local
SMTP_PASS=
SMTP_FROM_NAME=APK Billing Dev
SMTP_FROM_EMAIL=noreply@apkbilling.local

# SMS settings (disabled in development)
SMS_PROVIDER=
SMS_API_KEY=
SMS_FROM_NUMBER=

# Push notification settings (disabled in development)
FCM_SERVER_KEY=
FCM_SENDER_ID=

# ================================
# BACKUP CONFIGURATION
# ================================
# Database backup settings (disabled in development)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=./backups
BACKUP_ENCRYPTION_KEY=

# Cloud backup (disabled in development)
CLOUD_BACKUP_PROVIDER=
CLOUD_BACKUP_KEY=
CLOUD_BACKUP_SECRET=
CLOUD_BACKUP_BUCKET=

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=50m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD

# Enable specific logs (all enabled for development)
LOG_DATABASE_QUERIES=true
LOG_API_REQUESTS=true
LOG_TV_EVENTS=true
LOG_TRANSACTIONS=true

# ================================
# MONITORING & ANALYTICS
# ================================
# System monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# Analytics (disabled in development)
GOOGLE_ANALYTICS_ID=
ENABLE_USAGE_ANALYTICS=false

# Performance monitoring (disabled in development)
ENABLE_APM=false
APM_SERVICE_NAME=apkbilling-dev
APM_SERVER_URL=

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
# Development only settings (ENABLED in development)
DEV_ENABLE_SEED_DATA=true
DEV_ENABLE_FAKE_PAYMENTS=true
DEV_MOCK_TV_RESPONSES=true
DEV_SKIP_AUTH=false

# API Documentation (enabled in development)
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Debug settings (enabled in development)
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Hot reload settings
ENABLE_HOT_RELOAD=true
WATCH_FILES=true