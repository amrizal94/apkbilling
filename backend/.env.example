# ================================
# APK BILLING SYSTEM CONFIGURATION
# ================================

# ================================
# DATABASE CONFIGURATION
# ================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=apkbilling
DB_USER=apkbilling_user
DB_PASSWORD=apkbilling_password
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=2000

# ================================
# REDIS CONFIGURATION
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=apkbilling:

# ================================
# SERVER CONFIGURATION
# ================================
PORT=3000
NODE_ENV=development
API_VERSION=v1
CORS_ORIGIN=*
REQUEST_TIMEOUT=30000

# ================================
# SECURITY CONFIGURATION
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600

# Admin default credentials (change after first login)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_NAME=System Administrator

# ================================
# FILE UPLOAD CONFIGURATION
# ================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_URL_PREFIX=/uploads

# ================================
# BUSINESS CONFIGURATION
# ================================
# Cafe/Warnet Information
BUSINESS_NAME=Warnet & Cafe ABC
BUSINESS_ADDRESS=Jl. Raya No. 123, Kota ABC
BUSINESS_PHONE=021-12345678
BUSINESS_EMAIL=info@warnetabc.com
BUSINESS_WEBSITE=https://warnetabc.com

# Currency & Pricing
CURRENCY=IDR
CURRENCY_SYMBOL=Rp
TAX_RATE=0.10
SERVICE_CHARGE=0.05
DECIMAL_PLACES=0

# Working Hours
WORKING_HOURS_START=08:00
WORKING_HOURS_END=23:00
TIMEZONE=Asia/Jakarta

# ================================
# TV BILLING CONFIGURATION
# ================================
# Maximum concurrent TV sessions
MAX_TV_SESSIONS=100

# Session warning time (minutes before session ends)
SESSION_WARNING_MINUTES=5

# Auto power off when session ends
AUTO_POWER_OFF=true

# Minimum billing time (minutes)
MIN_BILLING_TIME=30

# Grace period after session ends (seconds)
GRACE_PERIOD_SECONDS=30

# TV monitoring interval (seconds)
TV_MONITOR_INTERVAL=10

# ================================
# POS SYSTEM CONFIGURATION
# ================================
# Order number prefix
ORDER_PREFIX=ORD
ORDER_NUMBER_LENGTH=8

# Receipt settings
RECEIPT_FOOTER=Terima kasih atas kunjungan Anda!
PRINT_LOGO=true
PRINT_QR_CODE=true

# Stock management
LOW_STOCK_THRESHOLD=10
AUTO_REORDER=false

# ================================
# NETWORK CONFIGURATION
# ================================
# WiFi Information for customers
WIFI_NAME=Warnet_ABC
WIFI_PASSWORD=password123
WIFI_GUEST_NAME=Guest_ABC
WIFI_GUEST_PASSWORD=guest123

# TV Network settings
TV_NETWORK_RANGE=192.168.1.0/24
TV_DISCOVERY_PORT=8888
TV_COMMAND_PORT=8889

# ================================
# NOTIFICATION CONFIGURATION
# ================================
# Email settings (for reports and alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=APK Billing System
SMTP_FROM_EMAIL=noreply@apkbilling.com

# SMS settings (optional)
SMS_PROVIDER=
SMS_API_KEY=
SMS_FROM_NUMBER=

# Push notification settings
FCM_SERVER_KEY=
FCM_SENDER_ID=

# ================================
# BACKUP CONFIGURATION
# ================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
BACKUP_ENCRYPTION_KEY=

# Cloud backup (optional)
CLOUD_BACKUP_PROVIDER=
CLOUD_BACKUP_KEY=
CLOUD_BACKUP_SECRET=
CLOUD_BACKUP_BUCKET=

# ================================
# LOGGING CONFIGURATION
# ================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
LOG_DATE_PATTERN=YYYY-MM-DD

# Enable specific logs
LOG_DATABASE_QUERIES=false
LOG_API_REQUESTS=true
LOG_TV_EVENTS=true
LOG_TRANSACTIONS=true

# ================================
# MONITORING & ANALYTICS
# ================================
# System monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Analytics
GOOGLE_ANALYTICS_ID=
ENABLE_USAGE_ANALYTICS=true

# Performance monitoring
ENABLE_APM=false
APM_SERVICE_NAME=apkbilling
APM_SERVER_URL=

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
# Development only settings
DEV_ENABLE_SEED_DATA=true
DEV_ENABLE_FAKE_PAYMENTS=false
DEV_MOCK_TV_RESPONSES=false
DEV_SKIP_AUTH=false

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api-docs

# Debug settings
DEBUG_MODE=false
VERBOSE_LOGGING=false