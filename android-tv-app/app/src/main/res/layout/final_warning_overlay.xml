<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CC000000"
    android:gravity="center"
    android:padding="40dp">

    <!-- Warning Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠️"
        android:textSize="64sp"
        android:layout_marginBottom="20dp" />

    <!-- Warning Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SESSION EXPIRED"
        android:textColor="@color/status_error"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <!-- Warning Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your billing session has ended.\nThe device will be turned off automatically."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAlignment="center"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="30dp" />

    <!-- Countdown -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shutting down in 10 seconds..."
        android:textColor="@color/status_warning"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center" />

</LinearLayout>