<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_background"
    android:padding="32dp"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_settings"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configure APK Billing System"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Server Configuration Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server Configuration"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Server URL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server URL"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_server_url"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_disabled"
                    android:hint="http://192.168.1.10:3000"
                    android:inputType="textUri"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <!-- Connection Status -->
                <TextView
                    android:id="@+id/tv_connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection not tested"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Test Connection Button -->
                <Button
                    android:id="@+id/btn_test_connection"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:text="TEST CONNECTION"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_outline"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Device Configuration Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Configuration"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Device Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Name"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_disabled"
                    android:hint="AndroidTV-Device1"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <!-- Device Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Location"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_device_location"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_disabled"
                    android:hint="Lantai 1 - Area Gaming"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

                <!-- Warning Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Warning Time (minutes)"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_warning_time"
                    android:layout_width="120dp"
                    android:layout_height="56dp"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_disabled"
                    android:hint="5"
                    android:inputType="number"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="RESET"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/btn_outline"
                android:textColor="@color/white"
                android:layout_marginEnd="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="SAVE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/btn_primary"
                android:textColor="@color/white"
                android:layout_marginEnd="12dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="140dp"
                android:layout_height="56dp"
                android:text="BACK"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/btn_secondary"
                android:textColor="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true" />

        </LinearLayout>

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:background="@drawable/info_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💡 Tips:"
                android:textSize="16sp"
                android:textColor="@color/status_warning"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Server URL format: http://IP_ADDRESS:PORT\n• Example: http://192.168.1.10:3000\n• Test connection before saving\n• Device name will appear in admin panel"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>